---
interface Client {
  name: string;
  industry: string;
}

const clients: Client[] = [
  { name: "TechCorp Solutions", industry: "SaaS" },
  { name: "Meridian Consulting", industry: "Consultoría" },
  { name: "Atlas Industries", industry: "Manufactura" },
  { name: "Vertex Real Estate", industry: "Inmobiliaria" },
  { name: "Pinnacle Finance", industry: "Finanzas" },
  { name: "Nova Healthcare", industry: "Salud" },
  { name: "Summit Logistics", industry: "Logística" },
  { name: "Horizon Education", industry: "Educación" },
];

// Duplicate for seamless marquee
const allClients = [...clients, ...clients];
---

<section class="py-20 bg-gray-50">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12 reveal">
      <p class="text-sm font-bold text-gray-400 uppercase tracking-widest">
        Empresas que confían en nosotros
      </p>
    </div>
    
    <div class="marquee">
      <div class="marquee-content gap-8">
        {allClients.map((client) => (
          <div class="flex flex-col items-center justify-center px-12 py-8 bg-white rounded-2xl border border-gray-100 shadow-sm shrink-0 min-w-[200px] hover:shadow-md transition-shadow">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center text-2xl font-bold text-gray-500 mb-4">
              {client.name.charAt(0)}
            </div>
            <div class="text-secondary font-bold text-center">{client.name}</div>
            <div class="text-gray-400 text-sm">{client.industry}</div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
