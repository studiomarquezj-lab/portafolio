---
interface Props {
    title: string;
    subtitle: string;
    ctaText?: string;
    bgImage?: string;
}

const {
    title,
    subtitle,
    ctaText = "Agendar diagn√≥stico especializado",
    bgImage = "/images/hero_abstract_growth.png",
} = Astro.props;
---

<section
    class="relative min-h-[80vh] flex items-center pt-32 pb-24 overflow-hidden bg-secondary"
>
    <!-- Dynamic Background Asset -->
    {
        bgImage && (
            <div class="absolute inset-0 -z-10 opacity-30 mix-blend-overlay">
                <img
                    src={bgImage}
                    alt=""
                    class="w-full h-full object-cover scale-110 blur-sm lg:blur-none"
                />
            </div>
        )
    }

    <!-- Advanced Glass Overlays -->
    <div
        class="absolute inset-0 bg-gradient-to-b from-secondary via-secondary/80 to-secondary -z-10"
    >
    </div>
    <div
        class="absolute top-0 right-0 w-[60%] h-[60%] glass-sphere opacity-10 rounded-full blur-[120px] -z-10"
    >
    </div>

    <div class="max-w-[1400px] mx-auto px-8 relative z-10">
        <div class="max-w-5xl">
            <!-- Premium Badge -->
            <div
                class="reveal inline-flex items-center gap-3 px-4 py-2 mb-10 rounded-full ultra-thin-border bg-white/5 backdrop-blur-md text-accent font-bold text-[10px] tracking-[0.3em] uppercase"
            >
                <span
                    class="w-1.5 h-1.5 rounded-full bg-accent shadow-[0_0_10px_#00f2ff]"
                ></span>
                Servicio Nivel Elite
            </div>

            <h1
                class="reveal text-6xl md:text-8xl lg:text-9xl font-display font-black text-white mb-10 leading-[0.9] tracking-tighter uppercase mercury-text"
            >
                {title}<span class="text-accent font-serif-elite italic">.</span
                >
            </h1>

            <p
                class="reveal text-2xl md:text-3xl text-zinc-400 mb-14 leading-relaxed font-light max-w-3xl"
                style="transition-delay: 200ms;"
            >
                {subtitle}
            </p>

            <div
                class="reveal flex flex-col sm:flex-row gap-6"
                style="transition-delay: 400ms;"
            >
                <a
                    href="/contacto"
                    class="cta-elite-glow group text-xs font-bold uppercase tracking-[0.2em] px-12 py-6 rounded-full flex items-center gap-4"
                >
                    <span>{ctaText}</span>
                    <span
                        class="material-symbols-outlined text-lg group-hover:translate-x-1 transition-transform"
                        >arrow_outward</span
                    >
                </a>
            </div>
        </div>
    </div>
</section>
