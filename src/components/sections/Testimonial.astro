---
interface TestimonialData {
  quote: string;
  author: string;
  role: string;
  company?: string;
}

interface Props {
  testimonial: TestimonialData;
}

const { testimonial } = Astro.props;
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto reveal">
      <div class="relative bg-blue-50 rounded-[40px] p-12 md:p-16">
        <!-- Quote icon -->
        <div class="absolute -top-6 left-12 w-16 h-16 rounded-2xl bg-primary flex items-center justify-center text-white text-4xl font-serif shadow-xl">
          "
        </div>
        
        <blockquote class="pt-8">
          <p class="text-2xl md:text-3xl font-display text-secondary leading-relaxed mb-8">
            "{testimonial.quote}"
          </p>
          
          <footer class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center text-white font-bold text-xl">
              {testimonial.author.charAt(0)}
            </div>
            <div>
              <div class="font-bold text-secondary text-lg">{testimonial.author}</div>
              <div class="text-gray-500">{testimonial.role}{testimonial.company && `, ${testimonial.company}`}</div>
            </div>
          </footer>
        </blockquote>
      </div>
    </div>
  </div>
</section>
