---
interface StatItem {
  value: string;
  label: string;
  highlight?: boolean;
}

interface Props {
  stats: StatItem[];
  title?: string;
}

const { stats, title = "Resultados promedio de nuestros clientes" } = Astro.props;
---

<section class="py-20 bg-blue-50/50">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12 reveal">
      <p class="text-sm font-bold text-primary uppercase tracking-widest">{title}</p>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-5xl mx-auto">
      {stats.map((stat, index) => (
        <div class="reveal text-center p-8 bg-white rounded-3xl border border-blue-100 shadow-sm hover-float" style={`transition-delay: ${index * 100}ms`}>
          <div class={`text-4xl md:text-5xl font-display font-black mb-3 ${stat.highlight ? 'text-primary' : 'text-secondary'}`}>
            {stat.value}
          </div>
          <div class="text-sm text-gray-500 uppercase tracking-widest font-bold">
            {stat.label}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
