---
import Button from "../ui/Button.astro";

interface Props {
    title: string;
    subtitle: string;
    ctaText: string;
    ctaHref: string;
}

const { title, subtitle, ctaText, ctaHref } = Astro.props;
const words = title.split(" ");
---

<section
    class="relative min-h-screen flex items-center pt-24 overflow-hidden bg-secondary"
>
    <!-- Background Decorations (Stitch glass spheres) -->
    <div class="absolute top-0 left-0 w-full h-full -z-10">
        <div
            class="absolute top-[15%] left-[10%] w-[600px] h-[600px] glass-sphere rounded-full opacity-20 blur-sm"
        >
        </div>
        <div
            class="absolute bottom-[-10%] right-[5%] w-[800px] h-[800px] glass-sphere rounded-full opacity-10 blur-md"
        >
        </div>
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] opacity-20 pointer-events-none"
        >
            <svg
                class="w-full h-full"
                viewBox="0 0 1000 1000"
                xmlns="http://www.w3.org/2000/svg"
            >
                <defs>
                    <linearGradient
                        id="grad"
                        x1="0%"
                        x2="100%"
                        y1="0%"
                        y2="100%"
                    >
                        <stop
                            offset="0%"
                            style="stop-color:rgb(255,255,255);stop-opacity:0.2"
                        ></stop>
                        <stop
                            offset="100%"
                            style="stop-color:rgb(0,0,0);stop-opacity:0"></stop>
                    </linearGradient>
                </defs>
                <path
                    d="M 0 500 Q 250 200 500 500 T 1000 500"
                    fill="none"
                    stroke="url(#grad)"
                    stroke-width="0.5"></path>
                <path
                    d="M 0 600 Q 300 300 600 600 T 1200 600"
                    fill="none"
                    opacity="0.5"
                    stroke="url(#grad)"
                    stroke-width="0.5"></path>
            </svg>
        </div>
    </div>

    <div class="max-w-[1400px] mx-auto px-8 w-full">
        <div class="grid lg:grid-cols-12 gap-16 items-center">
            <div class="lg:col-span-8 relative z-10">
                <!-- Badge -->
                <div
                    class="reveal inline-flex items-center gap-4 mb-10 ultra-thin-border px-4 py-2 rounded-full bg-white/5 backdrop-blur-sm"
                >
                    <span
                        class="w-1.5 h-1.5 rounded-full bg-accent shadow-[0_0_10px_#00f2ff]"
                    ></span>
                    <span
                        class="text-[9px] font-bold tracking-[0.4em] uppercase opacity-70"
                        >Marketing Boutique de Élite</span
                    >
                </div>

                <!-- Main Headline (Mercury text style) -->
                <h1
                    class="reveal text-6xl md:text-8xl xl:text-[110px] font-extrabold leading-[0.85] tracking-tighter mb-10 mercury-text"
                >
                    {words.slice(0, 2).join(" ")}
                    <br />
                    <span
                        class="font-serif-elite italic font-normal lowercase tracking-normal px-2"
                        >{words[2] || ""}</span
                    >
                    {words.slice(3, 5).join(" ")}
                    <br />
                    <span class="text-white">{words.slice(5).join(" ")}</span>
                </h1>

                <div
                    class="flex flex-col md:flex-row gap-12 items-start md:items-center"
                >
                    <div class="max-w-md">
                        <p
                            class="reveal text-lg md:text-xl text-zinc-400 font-light leading-relaxed mb-8"
                        >
                            {subtitle}
                        </p>
                        <div class="reveal flex flex-wrap gap-6">
                            <a
                                href={ctaHref}
                                class="cta-elite-glow px-10 py-5 rounded-full text-xs font-bold uppercase tracking-[0.2em] flex items-center gap-4"
                            >
                                {ctaText}
                                <span class="material-symbols-outlined text-lg"
                                    >arrow_outward</span
                                >
                            </a>
                            <a
                                href="#proceso"
                                class="px-10 py-5 rounded-full text-xs font-bold uppercase tracking-[0.2em] ultra-thin-border hover:bg-white/5 transition-all"
                            >
                                Metodología
                            </a>
                        </div>
                    </div>

                    <!-- Stats (Stitch style) -->
                    <div
                        class="reveal flex flex-col gap-8 pl-8 border-l ultra-thin-border border-white/10"
                    >
                        <div>
                            <div class="text-3xl font-bold tracking-tighter">
                                8-12x
                            </div>
                            <div
                                class="text-[8px] uppercase tracking-[0.3em] opacity-40 mt-1 font-bold"
                            >
                                ROI Promedio
                            </div>
                        </div>
                        <div>
                            <div class="text-3xl font-bold tracking-tighter">
                                150<span class="text-sm">X</span>
                            </div>
                            <div
                                class="text-[8px] uppercase tracking-[0.3em] opacity-40 mt-1 font-bold"
                            >
                                Mejor Caso
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side Card (Stitch analytics card) -->
            <div class="lg:col-span-4 relative hidden lg:block">
                <div
                    class="relative w-full aspect-[4/5] flex items-center justify-center"
                >
                    <div
                        class="absolute inset-0 ultra-thin-border rounded-[2rem] bg-white/5 backdrop-blur-3xl overflow-hidden glow-border-subtle"
                    >
                        <div
                            class="absolute top-0 left-0 w-full h-1/2 bg-gradient-to-b from-white/10 to-transparent"
                        >
                        </div>
                        <div class="p-8 h-full flex flex-col justify-between">
                            <div class="flex justify-between items-start">
                                <div class="space-y-1">
                                    <div
                                        class="text-[10px] font-bold tracking-widest opacity-40 uppercase"
                                    >
                                        Performance
                                    </div>
                                    <div class="text-xl font-bold">
                                        Protocol In
                                    </div>
                                </div>
                                <div
                                    class="w-10 h-10 rounded-xl ultra-thin-border flex items-center justify-center bg-black/40"
                                >
                                    <span
                                        class="material-symbols-outlined text-white/40 text-sm"
                                        >monitoring</span
                                    >
                                </div>
                            </div>
                            <div class="space-y-6">
                                <div
                                    class="h-[1px] w-full bg-gradient-to-r from-transparent via-white/20 to-transparent"
                                >
                                </div>
                                <div class="flex items-end justify-between">
                                    <div>
                                        <div
                                            class="text-4xl font-extrabold tracking-tighter"
                                        >
                                            +50
                                        </div>
                                        <div
                                            class="text-[9px] font-bold tracking-widest opacity-40 uppercase mt-2"
                                        >
                                            Clientes Escalando
                                        </div>
                                    </div>
                                    <div
                                        class="flex items-center gap-1 text-accent"
                                    >
                                        <span
                                            class="material-symbols-outlined text-sm"
                                            >trending_up</span
                                        >
                                        <span class="text-[10px] font-bold"
                                            >USA + LATAM</span
                                        >
                                    </div>
                                </div>
                                <div class="flex gap-2 h-12 items-end">
                                    <div
                                        class="flex-1 bg-white/5 rounded-t-sm h-[40%]"
                                    >
                                    </div>
                                    <div
                                        class="flex-1 bg-white/10 rounded-t-sm h-[60%]"
                                    >
                                    </div>
                                    <div
                                        class="flex-1 bg-accent/40 rounded-t-sm h-[90%]"
                                    >
                                    </div>
                                    <div
                                        class="flex-1 bg-white/10 rounded-t-sm h-[70%]"
                                    >
                                    </div>
                                    <div
                                        class="flex-1 bg-white/5 rounded-t-sm h-[50%]"
                                    >
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div
                        class="absolute -top-12 -right-12 w-32 h-32 glass-sphere rounded-full z-20"
                    >
                    </div>
                    <div
                        class="absolute -bottom-16 -left-16 w-48 h-48 glass-sphere rounded-full z-20 opacity-80 scale-75"
                    >
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scroll Indicator -->
    <div
        class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center gap-4 opacity-40"
    >
        <span class="text-[8px] uppercase tracking-[0.5em] font-bold"
            >Explorar</span
        >
        <div class="w-[0.5px] h-12 bg-gradient-to-b from-white to-transparent">
        </div>
    </div>
</section>
