---
const platforms = [
  { name: "Meta Ads", description: "Facebook + Instagram", icon: "/icons/meta.svg" },
  { name: "Google Ads", description: "Search + YouTube", icon: "/icons/google.svg" },
  { name: "TikTok Ads", description: "Creativos virales", icon: "/icons/tiktok.svg" },
  { name: "LinkedIn Ads", description: "Segmentaci√≥n B2B", icon: "/icons/linkedin.svg" }
];
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl md:text-4xl font-display font-bold text-blue-900 mb-16 uppercase reveal">
      Domina las plataformas que generan dinero
    </h2>
    
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
      {platforms.map((platform, index) => (
        <div class="p-8 rounded-2xl border border-gray-100 bg-gray-50 flex flex-col items-center group hover:border-blue-500 transition-all reveal" style={`transition-delay: ${index * 100}ms`}>
          <div class="w-16 h-16 bg-white rounded-xl shadow-sm flex items-center justify-center mb-6 text-2xl font-bold text-blue-600 grayscale group-hover:grayscale-0 transition-all">
            {platform.name[0]}
          </div>
          <h3 class="text-xl font-bold text-blue-900 mb-2">{platform.name}</h3>
          <p class="text-gray-500 text-sm uppercase tracking-tighter">{platform.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
