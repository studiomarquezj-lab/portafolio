---
const navItems = [
    {
        label: "Servicios",
        href: "#servicios",
        children: [
            { label: "Ads de Performance", href: "/servicios/ads" },
            { label: "Automatizaci√≥n", href: "/servicios/automatizacion" },
            { label: "Sistemas y Funnels", href: "/servicios/sistemas" },
        ],
    },
    { label: "Casos", href: "/casos" },
    { label: "Nosotros", href: "/nosotros" },
    { label: "Contacto", href: "/contacto" },
];
---

<nav class="fixed top-0 w-full z-50 jewelry-nav px-8 py-5">
    <div class="max-w-[1400px] mx-auto flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-4 group cursor-pointer">
            <div
                class="w-8 h-8 rounded-full ultra-thin-border flex items-center justify-center bg-white/5 group-hover:bg-white/10 transition-all"
            >
                <img
                    src="/images/in-svg-blanco.svg"
                    alt="In"
                    class="h-4 w-auto"
                />
            </div>
            <span class="text-lg font-bold tracking-[0.3em] uppercase"
                >IN <span class="font-extralight opacity-60">AGENCIA</span
                ></span
            >
        </a>

        <!-- Desktop Navigation -->
        <div
            class="hidden lg:flex items-center gap-12 text-[10px] font-bold tracking-[0.25em] uppercase"
        >
            {
                navItems.map((item) => (
                    <div class="relative group/nav">
                        <a
                            href={item.href}
                            class="nav-link-jewelry opacity-60 hover:opacity-100 flex items-center gap-2"
                        >
                            {item.label}
                            {item.children && (
                                <span class="material-symbols-outlined text-xs opacity-40 group-hover/nav:rotate-180 transition-transform">
                                    expand_more
                                </span>
                            )}
                        </a>

                        {item.children && (
                            <div class="absolute top-[100%] left-[-20px] pt-4 opacity-0 invisible group-hover/nav:opacity-100 group-hover/nav:visible transition-all duration-300 translate-y-2 group-hover/nav:translate-y-0">
                                <div class="glass-card rounded-2xl p-3 min-w-[260px]">
                                    {item.children.map((child) => (
                                        <a
                                            href={child.href}
                                            class="flex items-center justify-between px-5 py-3 rounded-xl text-[10px] font-bold uppercase tracking-[0.2em] text-white/50 hover:bg-white/5 hover:text-white transition-all group/item"
                                        >
                                            {child.label}
                                            <span class="material-symbols-outlined text-sm opacity-0 -translate-x-2 group-hover/item:opacity-100 group-hover/item:translate-x-0 transition-all text-accent">
                                                arrow_forward
                                            </span>
                                        </a>
                                    ))}
                                </div>
                            </div>
                        )}
                    </div>
                ))
            }

            <div class="h-4 w-[0.5px] bg-white/20"></div>

            <a
                href="/contacto"
                class="ultra-thin-border px-6 py-2.5 rounded-full hover:bg-white hover:text-black transition-all duration-500"
            >
                Agendar Llamada
            </a>
        </div>

        <!-- Mobile Menu Button -->
        <button class="lg:hidden text-white/60">
            <span class="material-symbols-outlined">menu</span>
        </button>
    </div>
</nav>

<div class="h-24"></div>
<!-- Spacer for fixed nav -->
