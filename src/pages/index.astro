---
import Layout from "../layouts/Layout.astro";
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import Hero from "../components/sections/Hero.astro";
import Marquee from "../components/sections/Marquee.astro";
import ClientLogos from "../components/sections/ClientLogos.astro";
import ProblemSection from "../components/sections/ProblemSection.astro";
import SolutionSteps from "../components/sections/SolutionSteps.astro";
import ForWho from "../components/sections/ForWho.astro";
import CaseStudies from "../components/sections/CaseStudies.astro";
import WhyUs from "../components/sections/WhyUs.astro";
import ProcessTimeline from "../components/sections/ProcessTimeline.astro";
import Guarantees from "../components/sections/Guarantees.astro";
import CtaSection from "../components/sections/CtaSection.astro";
---

<Layout
	title="In Agencia | Performance Marketing B2B"
	description="Especialistas en Ads de Performance. Generamos revenue, no likes."
>
	<Header />
	<main>
		<Hero
			title="¿Cuántos de tus leads realmente contestan el teléfono?"
			subtitle="He generado 4,166 leads calificados para seguros USA y reducido costos por venta 30% en e-commerce B2B."
			ctaText="Auditar mis campañas gratis"
			ctaHref="/contacto"
		/>
		<Marquee />
		<!-- ClientLogos removed as per new B2B strategy -->
		<div class="relative">
			<ProblemSection />
		</div>
		<SolutionSteps />
		<ForWho />
		<CaseStudies />
		<!-- WhyUs removed as per strategy simplifcation -->
		<ProcessTimeline />
		<Guarantees />
		<CtaSection />
	</main>
	<Footer />
</Layout>
